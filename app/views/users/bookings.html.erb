<div class="container-lg">
  <div class="row">
    <div class="col">
      <h3 class="text-start mt-5">My Bookings</h3>

      <% if @bookings.any? %>
        <% @bookings.each do |booking| %>
          <div class="card mt-3 d-flex">
            <div class="card-body d-flex justify-content-between align-items-center px-5">
              <div class="me-auto">
                <h5 class="card-title"><%= booking.service.name %></h5>
                <p class="card-text text-start text-secondary"><%= booking.start_date %> ~ <%= booking.end_date %></p>
              </div>
              <div class="p-2 me-3">
                <p class="text-danger mb-0">Cancel</p>
              </div>
              <div class="p-2 ms-4">
                <% if booking.confirmed == false %>
                  <p class="text-secondary mb-0">Waiting for<br>the confirmation</p>
                <% else %>
                  <p class="text-success mb-0">Confirmed</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col">
          <p class="mt-3"><strong>No past bookings found.</strong></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
