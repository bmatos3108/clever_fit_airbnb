<h1 class="mt-3">My services</h1>
<% if @services.any? %>
  <div class="container-sm mt-4 bg-white">
    <div class="row p-3">
      <% @services.each do |service| %>
        <div class="col-md-3 d-flex align-items-stretch">
          <div class="card m-3 flex-fill" style="width: 18rem;">
            <img src="https://www.olivetomato.com/wp-content/uploads/2022/06/Greek-Spaghetti-with-Ground-Beef-Sauce-recipe-%E2%80%93-Makaronia-me-Kima-2-900x600.jpeg" class="card-img-top">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= service.name %></h5>
              <p class="card-text text-start mb-2"><%= service.description_menu %></p>
              <div class="mt-auto d-flex justify-content-between align-items-center" style="height:30px">
                <p class="card-text mb-0 d-flex align-items-center fa-solid fa-euro-sign"><%= service.price %></p>
                <%= link_to 'Edit', edit_user_service_path(@user, service), class: 'btn btn-sm btn-dark border rounded' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-align-center mt-5"> You do not have service yet. </p>
<% end%>
