<div class="container-lg">
  <div class="row">
    <div class="col">
      <h3 class="text-start mt-5">Past Bookings</h3>

      <% if @past_bookings.any? %>
        <% @past_bookings.each do |booking| %>
          <div class="card mt-3">
            <div class="card-body">
              <h5 class="card-title"><%= booking.service.name %></h5>
              <p class="card-text text-start text-secondary"><%= booking.start_date %> ~  <%= booking.end_date %></p>
            </div>
            <div class="d-flex justify-content-start my-3 ml-3">
              <%= link_to 'Add Review', new_booking_review_path(booking.service), class: 'btn btn-dark' %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col">
          <p class="mt-3"><strong>No past bookings found.</strong></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
