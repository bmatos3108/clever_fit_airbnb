<h1>Your Bookings</h1>

<% if @bookings.any? %>
  <ul>
    <% @bookings.each do |booking| %>
      <li>
        <strong>Service:</strong> <%= booking.service.name %><br>
        <strong>Start Date:</strong> <%= booking.start_date.strftime("%B %d, %Y") %><br>
        <strong>End Date:</strong> <%= booking.end_date.strftime("%B %d, %Y") %><br>
        <strong>Status:</strong> <%= booking.confirmed ? 'Confirmed' : 'Pending' %><br>
        <%= link_to 'View', booking_path(booking) %> |
        <%= link_to 'Edit', edit_booking_path(booking) %> |
        <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You do not have any bookings.</p>
<% end %>
