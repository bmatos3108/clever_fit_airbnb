<div class="container-lg">
  <h3 class="text-start mt-5">Leave a Review</h3>

  <%= simple_form_for [@booking, @review], url: booking_reviews_path(@booking) do |form| %>
    <%= form.error_notification %>

    <div class="form-inputs">
      <%= form.input :rating, label: "Rating"%>

      <%= form.input :comment, as: :text, label: "Comment"%>
    </div>

    <div class="form-actions">
      <%= form.button :submit, "Submit Review", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
