<div class="container-lg">
  <h3 class="text-start mt-5">Leave a Review</h3>

  <%= simple_form_for [@booking, @review], url: new_service_review_path(@service) do |form| %>
    <%= form.error_notification %>

    <div class="form-inputs">
      <%= form.input :rating, label: "Rating"%>
      <%= form.input :comment, as: :text, label: "Comment"%>
    </div>

    <div class="form-actions">
      <%= form.button :submit, "Submit Review", class: "btn btn-dark" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
